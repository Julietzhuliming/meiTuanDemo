/**index.wxss**/
.container {
  width: 94%;
  margin: 0 3%;
  padding: 0;
}
/*swiper  */
swiper {
  width: 100%;
  height:275rpx;
}
swiper .slide-image{
  width: 100%;
  height: 100%;
}
/*menu  */
.menu-list {
  width: 100%;
  position: relative;
}
.menu-item {
  display: inline-flex;
  width: 14%;
  height: 110rpx;
  padding: 5% 3%;
  position: relative;
}
.item-img {
  max-width: 100%;
  height: 100%;
}
.item-desc {
  position: absolute;
  bottom: 0;
  left: 50%;
  width:100%;
  text-align: center;
  transform: translateX(-50%);
  display: block;
  color: #666;
  font-size: 20rpx;
}
/*推荐  */
.tuijian-list {
  width: 96%;
  margin: 5% 2%;
}
.tuijian-item{
  display: inline-flex;
  width: 46%;
  margin:0 2%;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 220rpx;
  overflow: hidden;
  border: 1px solide red;
}
.tuijian-bg{
  position: absolute;
  left: 0;
  max-width: 100%;
  max-height: 100%;
}
.tuijian-tagbg{
  position: absolute;
  left: 0;
  top: 0;
  width: 50%;
  height: 54rpx;
  z-index: 2;
  font-size: 24rpx;
}
.tagbg {
  max-width: 100%;
  max-height: 100%;
}
.tuijian-tag{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: inline-flex;
  text-indent: 12rpx;
  align-items: center;
  z-index: 3;
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}
.tuijian-title {
  display: block;
  position: absolute;
  left: 0;
  top: 34%;
  width: 100%;
  z-index: 2;
  font-size: 24rpx;
  font-weight: 600;
  text-indent: 12rpx;
  color: #222222;
}
.tuijian-desc{
  display: block;
  position: absolute;
  left: 0;
  top: 58%;
  z-index: 2;
  width: 100%;
  font-size: 20rpx;
  text-indent: 12rpx;
  color: #62676b;
}
.tuijian-meishi{
  position: absolute;
  bottom: -50rpx;
  right: -10rpx;
  z-index: 1;
  width: 180rpx;
  height: 180rpx;
  border-radius: 180rpx;
}
/*猜你喜欢  */
.guess-like {
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 10%;
}
.guess-you{
  display:block;
  width: auto;
  margin: 20rpx auto;
  font-size: 30rpx;
  height: 30rpx;
  color: #999999;
  position: relative;
  text-align: center;
}
.guess-you::before{
  position: absolute;
  content: "";
  left: -55rpx;
  top: 60%;
  display: block;
  width: 50rpx;
  height: 2rpx;
  background: #999999;
}
.guess-you::after{
  position: absolute;
  content: "";
  right: -55rpx;
  top: 60%;
  display: block;
  width: 50rpx;
  height: 2rpx;
  background: #999999;
}
/*喜欢列表  */
.guesslike-list {
  position: relative;
  width: 96%;
  margin: 0 2%;
}
.like-item{
  width: 96%;
  height: 225rpx;
  position: relative;
  margin: 45rpx 2%;
}
.like-item::before{
  position: absolute;
  top: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  content: "";
  width: 100%;
  height: 2rpx;
  background: #ddd;
}
.like_img{
  max-width: 160rpx;
  max-height: 160rpx;
}
.like_title{
  font-size: 30rpx;
  font-weight: 600;
  position: absolute;
  top: 0;
  text-indent: 15rpx;
}
.like_distance{
  font-size:22rpx;
  position: absolute;
  top: 0;
  right: 0;
  color: #6b6b6b;
}
.like_desc{
  color: #6b6b6b;
  font-size:22rpx;
  position: absolute;
  top: 50rpx;
  text-indent: 15rpx;
}
.like_price{
  position: absolute;
  top: 88rpx;
  text-indent: 15rpx;
  color: #ff6600;
}
.like_link{
  position: absolute;
  top: 140rpx;
  display: inline-block;
  margin-left: 15rpx;
  padding: 0 15rxp;
  color: #dc5b55;
  border-radius: 10rpx;
  border:2px solid #fecdc9;
  font-size: 20rpx;
}